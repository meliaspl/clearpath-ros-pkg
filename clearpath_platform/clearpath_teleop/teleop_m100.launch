<launch>
  <!-- Assuming an inventory of machines in parent directory. -->
  <include file="../machines.launch" />

  <group ns="clearpath/robots/kingfisher">  
    <node pkg="joy" type="joy_node" name="joy_node">
      <param name="dev" value="/dev/input/js0" />
      <param name="deadzone" value="0.3" />
    </node>

    <node pkg="clearpath_teleop" type="teleop.py" name="clearpath_teleop">
      <param name="turn_scale" value="1.0" />
      <param name="drive_scale" value="1.0" />
    </node>

    <node pkg="clearpath_base" type="raw.py" name="clearpath_base">
      <!-- Horizon data request frequencies -->
      <param name="data/system_status" value="10" />
      <param name="data/differential_output" value="10" />
      <param name="data/platform_orientation" value="10" />
    </node>
  </group>
</launch>
