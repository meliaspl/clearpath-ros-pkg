<launch>
  <!-- Assuming an inventory of machines in parent directory. -->
  <include file="../machines.launch" />

  <group ns="clearpath/robots/husky">  
    <node pkg="joy" type="joy_node" name="joy_node">
      <param name="dev" value="/dev/input/js0" />
      <param name="deadzone" value="0.3" />
    </node>

    <node pkg="clearpath_base" type="teleop.py" name="clearpath_teleop">
      <param name="turn_scale" value="1.05" />
      <param name="drive_scale" value="1.0" />
    </node>

    <!-- For open-loop control, use raw.py instead of kinematic.py. -->
    <node pkg="clearpath_base" type="kinematic.py" name="clearpath_base">
      <param name="accel" value="4" />

      <!-- Horizon data request frequencies -->
      <param name="data/system_status" value="10" />
      <param name="data/encoders" value="10" />
      <param name="data/differential_output" value="10" />
      <param name="data/differential_speed" value="10" />
    </node>
  </group>
</launch>
