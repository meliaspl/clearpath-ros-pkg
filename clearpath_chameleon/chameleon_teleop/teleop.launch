<launch>
  <node pkg="joy" type="joy_node" name="joy_node">
    <param name="dev" value="/dev/input/js0" />
    <param name="deadzone" value="0.3" />
  </node>

  <node pkg="chameleon_teleop" type="teleop.py" name="clearpath_teleop">
    <param name="turn_scale" value="1.05" />
    <param name="drive_scale" value="0.45" />
  </node>


  <node pkg="avr_bridge" type="bridge_node.py" name="chameleon_bridge" args="$(find chameleon_firmware)/config.yaml" />
</launch>
